<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/motor_terbang"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/tvProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flying Motorcycle"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/gambar1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$6.000.000"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/tvProduk"
        android:layout_marginStart="20dp"
        />

    <ImageButton
        android:id="@+id/ibFavorit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/baseline_favorite_24"
        android:layout_below="@id/tvProduk"
        android:layout_marginEnd="20dp"
        />

    <ImageButton
        android:id="@+id/ibStar1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="20dp"
        />

    <ImageButton
        android:id="@+id/ibStar2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="40dp"
        />

    <ImageButton
        android:id="@+id/ibStar3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="60dp"
        />

    <ImageButton
        android:id="@+id/ibStar4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="80dp"
        />

    <ImageButton
        android:id="@+id/ibStar5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="100dp"
        />

    <TextView
        android:id="@+id/ibRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="130dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8A8585"
        android:layout_below="@id/ibRating"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="18dp"
        android:textColor="#808080"
        android:layout_below="@id/ibRating"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/isiBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WarStock"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/brand"
        android:layout_below="@id/ibRating"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        />

    <TextView
        android:id="@+id/tipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe"
        android:textSize="18dp"
        android:textColor="#808080"
        android:layout_below="@id/brand"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/isiTipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oppressor MK II"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/tipe"
        android:layout_below="@id/isiBrand"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        />

    <TextView
        android:id="@+id/dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions"
        android:textSize="18dp"
        android:textColor="#808080"
        android:layout_below="@id/tipe"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/isiDimensions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.877 x 669 x 1.074 mm"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/tipe"
        android:layout_below="@id/isiTipe"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="1000dp"
        android:layout_height="70dp"
        android:layout_below="@id/dimension"
        android:layout_margin="15dp"
        android:text="Purchase"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#F44336"
        />

</RelativeLayout>