<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF6C00"
    tools:context="com.example.belajarandroidactivity.SplashScreenActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivDoaLogo2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/berdoa"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:ignore="ImageContrastCheck"
        android:layout_marginTop="-60dp"
        />



    <TextView
        android:id="@+id/tvJudulDoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_doa"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ivDoaLogo2"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />



</RelativeLayout>