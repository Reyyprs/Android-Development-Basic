<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belajarandroidactivity.DashboardActivity">

    <ImageButton
        android:id="@+id/ibMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_sort_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:background="@drawable/latihan_rectangle"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="261dp"
        android:layout_height="306dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/mini_gt_item"
        />

    <TextView
        android:id="@+id/tvSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sale"
        android:textSize="30dp"
        android:textColor="#F12727"
        android:layout_below="@id/ibMenu"
        android:layout_marginStart="20dp"
        android:layout_marginTop="220dp"
        />

    <TextView
        android:id="@+id/tvDiskon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10%"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#F12727"
        android:layout_below="@id/tvSale"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tvLimited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Limited Time*"
        android:textSize="25dp"
        android:textColor="#776F6F"
        android:layout_below="@id/tvDiskon"
        android:layout_marginStart="20dp"
        />

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvLimited"
        android:background="#9F9999"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/garis"
        android:textStyle="bold"
        android:textColor="#F57C00"
        />

    <TextView
        android:id="@+id/tvNewArrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Arrival"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/garis"
        android:textStyle="bold"
        android:textColor="#776F6F"
        />

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/garis"
        android:textStyle="bold"
        android:textColor="#776F6F"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="10dp"
        android:layout_below="@id/tvPopular"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/mobil"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="10dp"
        android:layout_below="@id/tvNewArrival"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/mobil_putih"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvJudul1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lamborghini Huracan"
        android:layout_below="@id/tvNewArrival"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/tvDesk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mini GT"
        android:layout_below="@id/tvNewArrival"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/tvPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$89,59"
        android:layout_below="@id/tvNewArrival"
        android:layout_marginStart="120dp"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:textColor="#F57C00"
        />

    <TextView
        android:id="@+id/tvJudul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LBWK GT"
        android:layout_below="@id/tvNewArrival"
        android:layout_marginStart="120dp"
        android:layout_marginTop="140dp"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/tvDesk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mini GT"
        android:layout_below="@id/tvNewArrival"
        android:layout_marginStart="120dp"
        android:layout_marginTop="170dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/tvPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$79,29"
        android:layout_below="@id/tvNewArrival"
        android:layout_marginStart="120dp"
        android:layout_marginTop="190dp"
        android:textSize="25dp"
        android:textColor="#F57C00"
        />

</RelativeLayout>